{% extends 'header_footer.html.twig' %}

{% block title %} Athletice Utilisateurs {% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{asset('User.css')}}">
    <link rel="stylesheet" href="{{asset('Filtres.css')}}"> 

    <h1 class="text-center font_title" style="text-decoration: underline;"> Nos utilisateurs </h1>

<div class="responsive_desktop">

        <div class="main_filtres" style="margin-bottom:1%;">
            <div class="btn btn-info" id="all"> Tous </div>
            <div class="btn btn-info" id="mail"> Email </div>
            <div class="btn btn-info" id="nom"> Prénom / Nom</div>
            <div class="btn btn-info" id="address"> Adresse </div>
        </div>

    <table class="table text-center font-size-user" style="padding:1.5%;">
        <thead>
            <tr>
                <th class="email">Email</th>
                <th class="not_in_filtre">Roles</th>
                <th class="name">Prénom</th>
                <th class="name">Nom</th>
                <th class="adress">Adresse</th>
                <th class="adress">Ville</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="table_item">
                <td  class="email">{{ user.email }}</td>
                {% if user.roles == ["ROLE_ADMIN"] %}
                    <td  class="not_in_filtre" style="color:red;">{{ user.roles ? user.roles|json_encode : '' }}</td>
                {% endif %}
                {% if user.roles == ["ROLE_FRANCHISE"] %}
                    <td  class="not_in_filtre" style="color:blue;">{{ user.roles ? user.roles|json_encode : '' }}</td>
                {% endif %}
                {% if user.roles == ["ROLE_STRUCTURE"] %}
                    <td  class="not_in_filtre" style="color:green;">{{ user.roles ? user.roles|json_encode : '' }}</td>
                {% endif %}
                <td  class="name">{{ user.firstname }}</td>
                <td  class="name">{{ user.name }}</td>
                <td  class="adress">{{ user.address }}</td>
                <td  class="adress">{{ user.city }}</td>
                <td class="adapting-button">
                    <a class="btn btn-info button_size" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                    <a class="btn btn-success button_size" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn-primary font_button" href="{{ path('app_register_admin') }}"> Créer un administrateur </a>
        <a class="btn btn-primary font_button" href="mailto:email_du_franchisé?subject=Formulaire%20d'inscription%20de%20votre%20Franchise&body=Bonjour%2C%20votre%20demande%20de%20franchise%20a%20%C3%A9t%C3%A9%20accept%C3%A9%2C%20bienvenue%20chez%20Athletice%20Sports.%0D%0A%0D%0AVeuillez%20d%C3%A8s%20%C3%A0%20pr%C3%A9sent%20vous%20inscrire%20sur%20notre%20site%20en%20cliquant%20sur%20ce%20lien%20%3A%20https%3A%2F%2Fecf-athletice.herokuapp.com%2Fregister_franchise%0D%0A%0D%0ACordialement%2C%20toute%20l'%C3%A9quipe%20d'Athletice%20Sports.%0D%0A"> Inscription Franchise </a>
        <a class="btn btn-primary font_button" href="mailto:email_de_la_structure?subject=Formulaire%20d'inscription%20de%20structure%20chez%20Athletice%20Sports&body=Bonjour%2C%20bienvenue%20chez%20Athletice%20!%0D%0A%0D%0AVoici%20votre%20formulaire%20d'inscription%20pour%20votre%20structure%20%3A%20https%3A%2F%2Fecf-athletice.herokuapp.com%2Fregister_structure%0D%0A%0D%0ACordialement%2C%20toute%20l'%C3%A9quipe%20d'Athletice%20Sports.%0D%0A"> Inscription Structure </a>
    </div>
</div>

<div class="responsive_tel">
